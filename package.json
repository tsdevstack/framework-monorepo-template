{
  "name": "{{PROJECT_NAME}}",
  "description": "TypeScript microservices monorepo built with tsdevstack.",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build:libs": "lerna run build --scope=@{{PROJECT_NAME}}/* --scope=@shared/*",
    "build:apps": "lerna run build --ignore=@{{PROJECT_NAME}}/* --ignore=@shared/*",
    "build": "npm run build:libs && npm run build:apps",
    "start": "npm run build:libs && lerna run start --parallel --ignore=@{{PROJECT_NAME}}/* --ignore=@shared/*",
    "dev": "npm run clean:tsbuildinfo && npm run build:libs && lerna run dev --parallel",
    "dev:workers": "lerna run start-worker:dev --parallel",
    "tsc": "lerna run tsc --parallel",
    "lint": "lerna run lint --parallel",
    "test": "lerna run test --parallel",
    "docs:generate": "lerna run docs:generate",
    "clean:tsbuildinfo": "find . -name '*.tsbuildinfo' -not -path '*/node_modules/*' -delete",
    "clean:cache": "npm run clean:tsbuildinfo && rm -rf node_modules/.cache",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx}": "node .tsdevstack/lint-staged-check.mjs"
  },
  "devDependencies": {
    "@tsdevstack/cli": "{{CLI_VERSION}}",
    "husky": "^9.1.7",
    "lerna": "^8.2.3",
    "lint-staged": "^16.2.7"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tsdevstack/framework-monorepo-template.git"
  },
  "homepage": "https://github.com/tsdevstack/framework-monorepo-template",
  "bugs": {
    "url": "https://github.com/tsdevstack/framework-monorepo-template/issues"
  },
  "engines": {
    "node": ">= 20.0.0"
  }
}
